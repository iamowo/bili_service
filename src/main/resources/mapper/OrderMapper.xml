<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bili.mapper.OrderMapper">

    <insert id="addOrders" useGeneratedKeys="true" keyProperty="id">
        insert into `order`
        (uid, totalAmount, product) values (#{uid}, #{totalAmount}, #{product})
    </insert>


    <update id="dealDone">
        update `order`
        <set>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="endtime != null">
                endtime = #{endtime},
            </if>
            <if test="paytime != null">
                paytime = #{paytime},
            </if>
            <if test="traceNo != null">
                traceno = #{traceNo}
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <select id="getByOrderId" resultType="com.bili.entity.PO.Orders">
        select * from `order`
        where
        id = #{id}
    </select>
</mapper>